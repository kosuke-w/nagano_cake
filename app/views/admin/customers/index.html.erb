<div>
  <div class="container col-8">
    <h4 class="table-secondary col-lg-2 mt-5 mb-3 ml-5">会員一覧</h4>
  </div>
  <div class="container col-6 mb-5">
    <table class="table table-hover table-inverse">
      <thead class="table-secondary">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td class="<%= "text-success font-weight-bold" if customer.is_active == "有効" %> <%= "text-black-50 font-weight-bold" if customer.is_active == "退会" %>">
              <%= customer.is_active %>
            </td>
          </tr>
        <% end %>
        <%= paginate @customers %>
      </tbody>
    </table>
  </div>
</div>
