<div>
  <div>
    <h1><%= @customer.name_display %>さんの会員情報編集</h1>
  </div>

  <div>
    <%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
      <div class="form-group row">
        <label>会員ID</label>
        <div>
          <%= @customer.id %>
        </div>
      </div>
      <div class="form-group row">
        <label>氏名</label>
        <div>
          <%= f.text_field :last_name, autofocus: true %>
        </div>
        <div>
          <%= f.text_field :first_name %>
        </div>
      </div>
      <div class="form-group row">
        <label>フリガナ</label>
        <div>
          <%= f.text_field :last_name_kana %>
        </div>
        <div>
          <%= f.text_field :first_name_kana %>
        </div>
      </div>
      <div class="form-group row">
        <label>郵便番号</label>
        <div>
          <%= f.text_field :postal_code %>
        </div>
      </div>
      <div>
        <label>住所</label>
        <div>
          <%= f.text_area :address %>
        </div>
      </div>
      <div class="form-group row">
        <label>電話番号</label>
        <div>
          <%= f.text_field :telephone_number %>
        </div>
      </div>
      <div class="form-group row">
        <label>メールアドレス</label>
        <div>
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="form-group row">
        <label>会員ステータス</label>
        <div>
          <%= f.radio_button :is_active, "Available" %>
          <%= f.label :is_active, "有効" %>
        </div>
        <div>
          <%= f.radio_button :is_active, "Invalid" %>
          <%= f.label :is_active, "退会" %>
        </div>
      </div>
      <div>
        <%= f.submit "変更を保存", class: "btn btn-green" %>
      </div>
    <% end %>
  </div>
</div>
