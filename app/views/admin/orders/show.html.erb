<div>
  <div>
    <h1>注文履歴詳細</h1>
  </div>

  <div>
    <div>
      <label>購入者</label>
      <%= @order.name %>
    </div>
    <div>
      <label>注文日</label>
      <%= l @order.created_at %>
    </div>
    <div>
      <label>配送先</label>
      <%= @order.address_display %>
    </div>
    <div>
      <label>支払方法</label>
      <%= @order.payment_method %>
    </div>
    <div>
      <label>注文ステータス</label>
      <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
        <% if @order.status == 1 %>
          <%= f.select :product_status == 1 %>
        <% else %>
          <%= f.select :status, Order.statuses.keys %>
          <%= f.submit "更新" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div>
    <table class="table table-hover table-inverse">
      <thead>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
      </thead>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.item.name %>
            </td>
            <td>
              <%= order_detail.item.add_tax_price.to_s(:delimited) %>
            </td>
            <td>
              <%= order_detail.amount %>
            </td>
            <td>
              <%= order_detail.item.add_tax_price * order_detail.amount %>
              <% @subtotal = order_detail.item.add_tax_price * order_detail.amount %>
            </td>
            <td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch, local: true do |f| %>
                <%= f.select :product_status, OrderDetail.product_statuses.keys %>
                <%= f.submit "更新" %>
              <% end %>
            </td>
            <% @total += @subtotal %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div>
    <div>
      <label>商品合計</label>
      <%= @total.to_s(:delimited) %>円
    </div>
    <div>
      <label>送料</label>
      <%= @order.shipping_cost %>円
    </div>
    <div>
      <label>請求金額合計</label>
      <%= @order.total_payment.to_s(:delimited) %>円
    </div>
  </div>
</div>
