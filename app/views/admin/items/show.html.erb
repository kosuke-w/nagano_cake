<h1>商品詳細</h1>
<div>
  <%= attachment_image_tag @item, :image, :fill, 60, 60 %>
</div>

<div>
  <label>商品名</label>
  <%= @item.name %>
  <label>商品説明</label>
  <%= @item.introduction %>
  <label>ジャンル</label>
  <%= @item.genre.name %>
  <label>税込価格（税抜価格）</label>
  <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
  <label>販売ステータス</label>
  <%= @item.is_active ? '販売中' : '販売停止中' %>
</div>

<div class="form-group">
  <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-sm btn-green" %>
</div>