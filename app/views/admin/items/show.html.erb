<div>
  <div>
    <h4 class="table-secondary col-lg-2 mt-5">商品詳細</h4>
  </div>

  <div class="container mt-5 d-flex">
    <div class="mr-5 d-inline">
      <%= attachment_image_tag @item, :image, :fill, 300, 300 %>
    </div>

    <div class="container col-lg-12 form-horizontal d-inline">
      <div class="form-group row">
        <label class="col-sm-2 control-label">商品名</label>
        <div>
          <strong><%= @item.name %></strong>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 control-label">商品説明</label>
        <div>
          <strong><%= @item.introduction %></strong>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 control-label">ジャンル</label>
        <div>
          <strong><%= @item.genre.name %></strong>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 control-label">税込価格<br>（税抜価格）</label>
        <div>
          <strong><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</strong>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 control-label">販売ステータス</label>
        <div class="<%= "text-success font-weight-bold" if @item.is_active == true %> <%= "text-black-50 font-weight-bold" if @item.is_active == false %>">
          <storng><%= @item.is_active ? '販売中' : '販売停止中' %></storng>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center mb-5">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-lg btn-success" %>
  </div>
</div>