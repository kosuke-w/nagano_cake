<h1>商品新規登録</h1>
<%= form_with model: @item, url: new_admin_item_path, local:true do |f| %>
    <div class="form-group">
      <label>商品画像</label>
      <%= attachment_image_tag @item, :image_id, :fill, 60, 60 %>
      <label>商品名</label>
      <%= f.text_field :name, class: "form-control" %>
      <label>商品説明</label>
      <%= f.text_area :introduction %>
      <label>ジャンル</label>
      <%= f.select :genre_id, @genres.map{ |f| [f.name, f.id] } %>
      <label>税抜価格</label>
      <%= f.text_field :price, autocomplete: "email" %>
      <label>販売ステータス</label>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "販売中", {value: true} %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "販売停止中", {value: false} %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: "btn btn-green" %>
    </div>
<% end %>

