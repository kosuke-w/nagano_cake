<div class="container mt-5">
  <h4 class="table-secondary col-lg-2">商品新規登録</h4>
    <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="container col-lg-12 form-horizontal ml-5">
        <div class="form-group row">
          <label class="col-sm-2 control-label">商品画像</label>
          <div class="field col-sm-3">
            <%= f.attachment_field :image %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 control-label">商品名</label>
          <div class="field col-sm-3">
            <%= f.text_field :name, class: "form-control col-lg-12 rounded field", placeholder: "商品名" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 control-label">商品説明</label>
          <div class="field col-sm-3">
            <%= f.text_area :introduction, class: "form-control col-lg-12 rounded field", placeholder: "ここに説明文を記述します" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 control-label">ジャンル</label>
          <div class="field col-sm-3">
            <%= f.select :genre_id, @genres.map{ |f| [f.name, f.id] }, :include_blank => "選択してください" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 control-label">税抜価格</label>
          <div class="field col-sm-3 d-flex">
            <%= f.text_field :price, class: "d-inline field form-control rounded col-lg-12", placeholder: "1000" %>円
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 control-label">販売ステータス</label>
          <div class="d-flex">
            <div class="field col-sm-6 d-inline">
              <%= f.radio_button :is_active, true, checked: true %>
              <%= f.label :is_active, "販売中", {value: true} %>
            </div>
            <div class="field col-sm-8 d-inlina">
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中", {value: false} %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    <% end %>
</div>