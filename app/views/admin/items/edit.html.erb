<h1>商品編集</h1>
<%= form_with model: @item, url: admin_item_path(@item.id), local:true do |f| %>
    <div class="form-group">
      <label>商品画像</label>
      <%= f.attachment_field :image %>
      <label>商品名</label>
      <%= f.text_field :name, class: "form-control" %>
      <label>商品説明</label>
      <%= f.text_area :introduction %>
      <label>ジャンル</label>
      <%= f.select :genre_id, @genres.map{ |f| [f.name, f.id] } %>
      <label>税抜価格</label>
      <%= f.text_field :price %>円
      <label>販売ステータス</label>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "販売中", {value: true} %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "販売停止中", {value: false} %>
    </div>
    <div class="form-group">
      <%= f.submit '変更を保存', class: "btn btn-green" %>
    </div>
<% end %>

