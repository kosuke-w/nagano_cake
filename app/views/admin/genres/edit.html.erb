<div class="container mt-5 ml-5 col-lg-12">
  <div>
    <h4 class="table-secondary col-lg-2 mt-5 ml-5 mb-5">ジャンル編集</h4>
  </div>

  <div class="container col-lg-12 ml-5 edit">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), local:true do |f| %>
      <div class="form-group row">
        <label class="control-label mr-5">ジャンル名</label>
        <div class="field mr-5">
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div>
          <%= f.submit '変更を保存', class: "btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>