<div class="container mt-5 col-lg-12">
  <div>
    <h4 class="table-secondary col-lg-2 mt-5 ml-5 mb-5">ジャンル一覧・追加</h4>
  </div>

  <div class="container col-lg-12 ml-5">
    <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group row">
        <label class="control-label mr-5">ジャンル名</label>
        <div class="field mr-5">
          <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名" %>
        </div>
        <div>
          <%= f.submit '新規登録', class: "btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="clearfix ml-5 mt-5 mb-5">
    <div class="container col-lg-3 float-left">
      <table class="table table-hover table-inverse">
        <thead class="table-secondary">
          <th class="col-lg-2">ジャンル</th>
          <th class="col-lg-1"></th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div>
    <h1>検索</h1>
    <%= search_form_for @q, url: search_admin_genres_path do |f| %>
      <%= f.label :name_cont, 'ジャンル名' %>
      <%= f.search_field :name_cont %>
      <br>
      <%= f.submit '検索' %>
    <% end %>
  </div>
</div>