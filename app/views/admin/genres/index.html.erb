<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
    <div class="form-group">
      <label>ジャンル名</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: "btn btn-green" %>
    </div>
<% end %>


<table class="table table-hover table-inverse">
  <thead>
    <th>ジャンル</th>
    <th></th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-green" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
