<div>
  <div>
    <h1>ショッピングカート</h1>
    <div>
      <%= link_to "カートを空にする", cart_items_destroy_all_path, class: "btn btn-sm btn-red" %>
    </div>
  </div>

  <div>
    <div>
      <table class="table table-hover table-inverse">
        <thead>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= cart_item.item.name %>
              </td>
              <td>
                <%= cart_item.item.add_tax_price.to_s(:delimited) %>
              </td>
              <td>
                <%= form_with method: :patch, model: cart_item, url: cart_item_path(cart_item.id), local:true do |f| %>
                  <div>
                    <%= f.select :amount, *[1..5] %>
                  </div>

                  <div>
                    <%= f.submit '変更', class: "btn btn-green" %>
                  </div>
                <% end %>
              </td>
              <td>
                <%= cart_item.subtotal.to_s(:delimited) %>
              </td>
                <% @total_payment += cart_item.subtotal %>
              <td>
                <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-sm btn-red" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <%= link_to "買い物を続ける", root_path, class: "btn btn-sm btn-red" %>
      </div>
      <table>
        <thead>
          <th>合計金額</th>
        </thead>
        <tbody>
          <tr>
            <td><%= @total_payment.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>



</div>
