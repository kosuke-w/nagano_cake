<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg nabvar-dark">
        <div class="container-fluid">
          <div class="float-left">
            <%= link_to root_path do %>
              <%= image_tag('logo.jpg') %>
            <% end %>
          </div>
          <div class="row">
          <% if admin_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li><%= link_to " 商品一覧", admin_items_path, class: "nav-text nav-link text-dark" %></li>
              <li><%= link_to " 会員一覧", admin_customers_path, class: "nav-text nav-link text-dark" %></li>
              <li><%= link_to " 注文履歴一覧", admin_orders_path, class: "nav-text nav-link text-dark" %></li>
              <li><%= link_to " ジャンル一覧", admin_genres_path, method: :delete, class: "nav-text nav-link text-dark" %></li>
              <li><%= link_to " ログアウト", destroy_admin_session_path, method: :delete, class: "nav-text nav-link text-dark" %></li>
            </ul>
          <% elsif customer_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li><%= link_to " マイページ", "/customers/my_page/#{current_customer.id}", class: "nav-text nav-link text-dark" %></li>
              <li><%= link_to " 商品一覧", items_path, class: "nav-text nav-link text-dark" %></li>
              <li><%= link_to " カート", cart_items_path, class: "nav-text nav-link text-dark" %></li>
              <li><%= link_to " ログアウト", destroy_customer_session_path, method: :delete, class: "nav-text nav-link text-dark" %></li>
            </ul>
          <% else %>
            <ul>
              <li><%= link_to " About", homes_about_path, class: "nav-text nav-link border rounded text-dark" %></li>
              <li><%= link_to " 商品一覧", items_path, class: "nav-text nav-link border rounded text-dark" %></li>
              <li><%= link_to " 新規登録", new_customer_registration_path, class: "nav-text nav-link border rounded text-dark" %></li>
              <li><%= link_to " ログイン", new_customer_session_path, class: "nav-text nav-link border rounded text-dark" %></li>
            </ul>
          <% end %>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>

    </footer>
  </body>
</html>
