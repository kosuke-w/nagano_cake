<div class="container mt-5">
  <div class="d-flex">
    <h2 class="d-inline">商品一覧</h2>
    <div class="d-inline mt-3">
      <p>（全<%= @items.count %>件）</p>
    </div>
  </div>

  <div class="d-flex flex-wrap">
    <% @items.each do |item| %>
    <div class="mt-3 mr-5">
      <div>
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 150, 150 %>
        <% end %>
      </div>
      <div>
        <%= item.name %>
      </div>
      <div>
        ¥<%= item.price.to_s(:delimited) %>
      </div>
    </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>

