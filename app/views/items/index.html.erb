<div>
  <div>
    <h1>商品一覧</h1>
    <p>（全<%= @items.count %>件）</p>
  </div>

  <div>
    <% @items.each do |item| %>
    <div>
      <div>
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 60, 60 %>
        <% end %>
      </div>
      <div>
        <%= item.name %>
      </div>
      <div>
        ¥<%= item.price.to_s(:delimited) %>
      </div>
    </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>

