<div class="container mt-5">
  <h4 class="table-secondary col-lg-3">管理者ログイン</h4>

  <div class="container col-lg-10 form-horizontal mt-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <label class="col-sm-3 control-label"><%= f.label :メールアドレス %></label>
        <div class="field col-sm-3">
          <%= f.email_field :email, {class: "rounded", autofocus: true, autocomplete: "email"} %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 control-label"><%= f.label :パスワード %></label>
        <div class="field col-sm-3">
          <%= f.password_field :password, {class: "rounded", autocomplete: "current-password"} %>
        </div>
      </div>

      <div class="actions text-center mt-5 mb-5">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

</div>