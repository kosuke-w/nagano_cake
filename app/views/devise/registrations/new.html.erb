<div class="container col-lg-8">
  <div class="table-secondary col-lg-2 mt-5 mb-5 ml-5">
    <h4>新規会員登録</h4>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container col-lg-12 form-horizontal">
    <div class="form-group row">
      <label class="col-sm-3 control-label">名前</label>
      <div class="field col-sm-3">
        <%= f.label :（姓） %>
        <%= f.text_field :last_name, {class: "rounded", autofocus: true} %>
      </div>
      <div class="field col-sm-3">
        <%= f.label :（名） %>
        <%= f.text_field :first_name, {class: "rounded"} %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 control-label">フリガナ</label>
      <div class="field col-sm-3">
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana, {class: "rounded"} %>
      </div>
      <div class="field col-sm-3">
        <%= f.label :（メイ） %>
        <%= f.text_field :first_name_kana, {class: "rounded"} %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 control-label">メールアドレス</label>
      <div class="field col-sm-3">
        <%= f.email_field :email, {class: "rounded", autocomplete: "email"} %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 control-label">郵便番号(ハイフンなし)</label>
      <div class="field col-sm-3">
        <%= f.text_field :postal_code, {class: "rounded"} %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 form-label">住所</label>
      <div class="field col-lg-9">
        <%= f.text_field :address, {class: "field form-control col-lg-7 border-secondary"} %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 control-label">電話番号(ハイフンなし)</label>
      <div class="field col-sm-3">
        <%= f.text_field :telephone_number, {class: "rounded"} %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 control-label">パスワード(6文字以上)</label>
      <div class="field col-sm-3">
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, {class: "rounded", autocomplete: "new-password"} %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 control-label">パスワード(確認用)</label>
      <div class="field col-sm-3">
        <%= f.password_field :password_confirmation, {class: "rounded", autocomplete: "new-password"} %>
      </div>
    </div>

    <div class="actions text-center">
      <%= f.submit "新規登録", class: "btn btn-success col-sm-2" %>
    </div>
  <% end %>
  </div>
</div>

<div class="container-fluid col-lg-8">
  <div class="table-secondary col-lg-2 mt-5 mb-3 ml-5">
    <h4>既に登録済の方</h4>
  </div>

  <div class="d-flex link">
    <%= link_to new_customer_session_path, {class: "d-inline center-block mr-2"} do %>
      <u>こちら</u>
    <% end %>
    <div class="d-inline center-block">
      <p>からログインしてください。</p>
    </div>
  </div>
</div>
