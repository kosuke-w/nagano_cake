<div class="container col-lg-12">
  <div class="table-secondary col-lg-1 mt-5 mb-5 ml-5">
    <h4>配送先編集</h4>
  </div>
  <%= form_with model: @address, url: address_path(@address.id), local:true do |f| %>
  <div class="container col-lg-12 form-horizontal">
    <div class="form-group row" >
      <label class="col-sm-2 control-label">郵便番号（ハイフンなし）</label>
      <div class="field col-sm-3">
        <%= f.text_field :postal_code, {class: "rounded"} %>
      </div>
    </div>
    <div class="form-group row" >
      <label class="col-sm-2 control-label">住所</label>
      <div class="field col-sm-3">
        <%= f.text_field :address, {class: "field form-control col-lg-12 border-secondary"} %>
      </div>
    </div>
    <div class="form-group row" >
      <label class="col-sm-2 control-label">宛名</label>
      <div class="field col-sm-3">
        <%= f.text_field :name, {class: "rounded"} %>
      </div>
      <div class="form-group row d-inline">
        <%= f.submit '変更内容を保存', class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
