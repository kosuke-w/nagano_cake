<h1>配送先編集</h1>
<%= form_with model: @address, url: address_path(@address.id), local:true do |f| %>
    <div class="form-group">
      <div class="form-group row" >
        <label>郵便番号（ハイフンなし）</label>
        <div>
          <%= f.text_field :postal_code %>
        </div>
      </div>
      <div class="form-group row" >
        <label>住所</label>
        <div>
          <%= f.text_area :address %>
        </div>
      </div>
      <div class="form-group row" >
        <label>宛名</label>
        <div>
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit '変更内容を保存', class: "btn btn-green" %>
      </div>
    </div>
    
<% end %>
