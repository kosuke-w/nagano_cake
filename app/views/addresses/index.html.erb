<div class="mb-5">
  <div class="container col-lg-12">
    <div class="table-secondary col-lg-2 mt-5 mb-5 ml-5">
      <h4>配送先登録/一覧</h4>
    </div>
    <div class="container col-lg-8 form-horizontal float-left ml-5">
      <%= form_with model: @address, url: addresses_path, local:true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group row">
        <label class="col-sm-2 control-label">郵便番号（ハイフンなし）</label>
        <div class="field col-sm-6">
          <%= f.text_field :postal_code, {class: "rounded", placeholder: "0000000"} %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 control-label">住所</label>
        <div class="field col-sm-6">
          <%= f.text_field :address, {class: "field form-control col-lg-12 border-secondary", placeholder: "東京都渋谷区代々木神園町0-0"} %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 control-label">宛名</label>
        <div class="field col-sm-6">
          <%= f.text_field :name, {class: "rounded", placeholder: "令和道子"} %>
        </div>
        <div class="form-group d-inline">
          <%= f.submit '新規登録', {class: "btn btn-success"} %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="container pull-left ml-5 mt-5">
    <table class="table table-hover table-bordered table-inverse col-lg-10">
      <thead class="table-secondary">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td>
              <%= address.postal_code %>
            </td>
            <td>
              <%= address.address %>
            </td>
            <td>
              <%= address.name %>
            </td>
            <td>
              <div class="d-flex justify-content-center">
                <div class="form-group row d-inline mr-5">
                  <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
                </div>
                <div class="form-group row d-inline">
                  <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
