<div>
  <div>
    <div>
      <h1>配送先登録/一覧</h1>
    </div>
    <div>
      <%= form_with model: @address, url: addresses_path, local:true do |f| %>
      <div class="form-group row">
        <label>郵便番号（ハイフンなし）</label>
        <div>
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label>住所</label>
        <div>
          <%= f.text_area :address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <label>宛名</label>
        <div>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit '新規登録', class: "btn btn-green" %>
      </div>
      <% end %>
    </div>
  </div>
  
  <div>
    <table class="table table-hover table-inverse">
      <thead>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td>
              <%= address.postal_code %>
            </td>
            <td>
              <%= address.address %>
            </td>
            <td>
              <%= address.name %>
            </td>
            <td>
              <div class="form-group">
                <%= link_to "編集する", edit_address_path, class: "btn btn-sm btn-green" %>
              </div>
              <div class="form-group">
                <%= link_to "削除する", address_path(@address.id), method: :delete, class: "btn btn-sm btn-red", "data-confirm" => "本当に消しますか？" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
