<div class="container col-lg-8">
  <div class="table-secondary col-lg-2 mt-5 mb-5 ml-5">
    <h4>マイページ</h4>
  </div>

  <div class="d-flex">
    <h4><strong>登録情報</strong></h4>
    <div class="form-group d-inline">
      <div class="form-group d-inline ml-5">
        <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-sm btn-success" %>
      </div>
    </div>
  </div>
  <div class="container-float col-lg-8">
    <table class="table table-bordered">
      <tr>
        <th class="table-secondary col-lg-3">氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="table-secondary col-lg-3">カナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="table-secondary col-lg-3">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="table-secondary col-lg-3">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table-secondary col-lg-3">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="table-secondary col-lg-3">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="d-flex">
    <h4><strong>配送先</strong></h4>
    <div class="form-group d-inline col-lg-3 ml-5">
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary col-lg-5" %>
    </div>
  </div>
  <div class="d-flex">
    <h4><strong>注文履歴</strong></h4>
    <div class="form-group d-inline col-lg-3 ml-4">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary col-lg-5" %>
    </div>
  </div>

</div>