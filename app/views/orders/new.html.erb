<div>
  <div>
    <h1>注文情報入力</h1>
  </div>

  <div>
    <%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
    <div>
      <label>支払方法</label>
      <div>
        <%= f.radio_button :payment_method, 0 %>
        <%= f.label :payment_method, "クレジットカード" %>
      </div>
      <div>
        <%= f.radio_button :payment_method, 1 %>
        <%= f.label :payment_method, "銀行振込" %>
      </div>
    </div>
    <div>
      <label>お届け先</label>
      <div>
        <%= f.radio_button :select_address, 0 %>
        <%= f.label :select_address, "ご自身の住所" %>
        <%= current_customer.self_address_display %>
      </div>
      <div>
        <%= f.radio_button :select_address, 1 %>
        <%= f.label :select_address, "登録済住所から選択" %>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      </div>
      <div>
        <%= f.radio_button :select_address, 2 %>
        <%= f.label :select_address, "新しいお届け先" %>
        <div>
          <label>郵便番号（ハイフンなし）</label>
          <div>
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>
        <div>
          <label>住所</label>
          <div>
            <%= f.text_area :address, class: "form-control" %>
          </div>
        </div>
        <div>
          <label>宛名</label>
          <div>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div>
      <%= f.submit "確認画面へ進む", class: "btn btn-blue" %>
    </div>
    <% end %>
  </div>
</div>
