<div>
  <div>
    <h1>注文履歴詳細</h1>
  </div>

  <div>
    <label>注文情報</label>
    <div>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= l @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address_display %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
  </div>

  <div>
    <label>請求情報</label>
    <div>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td>
            <%= @total.to_s(:delimited) %>
            <% @total = @order.total_payment - @order.shipping_cost %>
          </td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div>
    <label>注文内容</label>
    <div>
      <table class="table table-hover table-inverse">
        <thead>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= order_detail.item.name %>
              </td>
              <td>
                <%= order_detail.item.add_tax_price.to_s(:delimited) %>
              </td>
              <td>
                <%= order_detail.amount %>
              </td>
              <td>
                <% @subtotal = order_detail.item.add_tax_price * order_detail.amount %>
                <%= @subtotal.to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
