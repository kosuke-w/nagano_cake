<div>
  <div>
    <h1>注文履歴一覧</h1>
  </div>
  <div>
    <table class="table table-hover table-inverse">
      <thead>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= l order.created_at %>
            </td>
            <td>
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              
            </td>
            <td>
              <%= order.total_payment %>
            </td>
            <td>
              <%= order.status %>
            </td>
            <td>
              <div class="form-group">
                <%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-blue" %>
              </div>
              <div>
                <%= link_to "削除（一時的）", order_path(order.id), method: :delete, class: "btn btn-sm btn-blue" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
