<div class="container">
  <div class="table-secondary col-lg-2 mt-5 mb-5 ml-5">
    <h4>注文履歴一覧</h4>
  </div>
  <div>
    <table class="table table-hover table-bordered table-inverse">
      <thead class="table-secondary">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= l order.created_at %>
            </td>
            <td>
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <p><%= order_detail.item.name %></p>
              <% end %>
            </td>
            <td>
              <%= order.total_payment %>
            </td>
            <td>
              <%= order.status %>
            </td>
            <td>
              <div class="form-group">
                <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
